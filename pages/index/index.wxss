/* 全屏背景颜色 */
page {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
}
/* banner 宽度100% */
swiper {height: 388rpx;}
.swiper_img image {width: 100%;height: 388rpx;}

.index_icon_list {background: #fff;padding: 26rpx 0;}
.index_icon_list view {display:inline-block;width: 33%;text-align: center;line-height: 50rpx;font-size: 32rpx; }
.index_icon_list image {width: 42rpx;height: 42rpx;vertical-align:sub;margin-right: 10rpx;}

.new_ty_con {background: #fff;margin: 20rpx 30rpx;padding: 30rpx 40rpx;position: relative;}
.new_ty_title {border-bottom: 2rpx dashed #ccc;padding-bottom: 20rpx;font-size: 32rpx;}
.new_ty_pro {margin-top: 10rpx;font-size: 24rpx;}
.new_ty_pro .new_ty_pro_left {display: inline-block;width: 50%;}
.new_ty_pro .new_ty_pro_right {display: inline-block;width: 50%;}
.new_ty_pro text {font-size: 60rpx;padding: 0 4rpx;color: #ff723f;}

.new_ty_imgleft image {position: absolute;width: 40rpx;left: -16rpx;top: 16rpx;height: 160rpx;}
.new_ty_imgright image {position: absolute;width: 140rpx;top: 0;right: 0;height: 140rpx;}

.index_tz {background: #fff;margin: 20rpx 30rpx;padding:30rpx 40rpx;margin-bottom: 0;}
.index_tz_title {font-size: 32rpx;border-bottom: 2rpx dashed #ccc;padding-bottom: 20rpx;}
.index_tz_title text {border: 1px solid #ff723f;font-size: 24rpx;padding: 4rpx;border-radius: 10rpx;color: #ff723f;}
.index_tz_con {margin-top: 20rpx;}
.index_con_left {display: inline-block;width: 50%;}
.index_con_leftnum {display: inline-block;font-size: 60rpx;padding-right: 10rpx;color: #ff723f;}
.index_con_leftper {display: inline-block;font-size: 24rpx;}
.index_con_leftper text {color: #ff723f;}

.index_con_right {display: inline-block;width: 50%;}
.index_con_rightdata {font-size: 24rpx;}
.index_con_rightdata text {font-size: 38rpx;color: #ff723f;}
.index_tz_btn button {background-color: #ff723f;margin-top: 26rpx;}
.index_tz_db {text-align: center;font-size: 24rpx;margin-top: 16rpx;color: #666;}
.index_tz_db image {width: 30rpx;height: 30rpx;margin-right: 10rpx;vertical-align: sub;}