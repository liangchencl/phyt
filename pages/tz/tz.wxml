                        </view>
                        <view class="right_r" wx:if="{{item.percent == 100}}">
                            <navigator class="full" url="">已经投满</navigator>
                        </view>
                        <view class="right_r" wx:else>
                            <navigator url="invest/invest">开始投资</navigator>
