.project_hd .title {font-size: 40rpx;border-bottom: 2rpx solid #ccc;background: #fff;line-height: 2.2em;padding: 0 40rpx;}
.project_hd .title .bao {font-size: 26rpx;background: #9bc780;color: #fff;padding: 4rpx;border-radius: 6rpx;margin-left: 8rpx;}
.project_hd .title .fan {border: 2rpx solid #f00;color: #f00;font-size: 26rpx;padding: 4rpx 10rpx;border-radius: 6rpx;margin-left: 8rpx;}

.top {border-bottom: 2rpx solid #ccc;padding: 30rpx 0;background: #fff;}
.top .left {display: inline-block;width: 40%;text-align: center;border-right: 2rpx solid #ccc;box-sizing: border-box;padding: 30rpx 0;}
.top .left .percent {font-size: 60rpx;}
.top .left .percent text {font-size: 40rpx;padding-left: 6rpx;}
.top .left .yield {font-size: 26rpx;margin-top: 16rpx;}
.top .right {display: inline-block;width: 50%;margin-right: 4%;float: right;padding-top: 30rpx;font-size: 60rpx;}
.top .right text {font-size: 26rpx;}

.content {padding:30rpx;font-size: 30rpx;background: #fff;}
.content view {line-height: 2em;}
.content .content_top .left {display: inline-block;width: 50%;}
.content .content_top .right {display: inline-block;width: 50%;}

.project_bd {padding-bottom: 200rpx;}

.pro_list view {display: inline-block;width: 33.333%;text-align: center;font-size: 32rpx;border-top: 2rpx solid #ccc;border-bottom: 4rpx solid #ccc;line-height: 2.4em;background: #fff;box-sizing: border-box;}
.pro_list view.tab1 {border-left: 2rpx solid #ccc;border-right: 2rpx solid #ccc;}
.pro_list view.tab_info_show {background: #4aafe2;color: #fff;}

.pro_item {margin-top: 20rpx;}
.item_title {background: #fff;border-bottom: 2rpx solid #ccc;font-size: 34rpx;line-height: 2.2em;padding:0 30rpx; }
.item_title text {border-bottom: 2rpx solid #4aafe2;padding-bottom: 20rpx;}
.item_con {font-size: 26rpx;padding: 30rpx;line-height: 1.8em;}
.pro_item .item_con .h4 {font-size: 36rpx;margin-top: 16rpx;}


.tab_con_show {display: block;}
.tab_con_hide {display: none;}
.first_con_show {display: block;}
.first_con_hide {display: none;}

.record_title {background: #fff;font-size: 30rpx;line-height: 2.4em;text-align: center;border-bottom: 2rpx solid #ccc;}
.record_title text {display: inline-block;}
.record_con {font-size: 26rpx;line-height: 2.2em;text-align: center;}
.record_con view {border-bottom: 2rpx solid #ccc;}
.record_con text {display: inline-block;}
.record_left {width: 30%;}
.record_center {width: 40%;}
.record_right {width: 30%;}

.footer_btn button {position: fixed;bottom: 0;left: 0;width: 100%;background: #ff5304;color: #fff;}