/* 全屏背景颜色 */
page {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
}
.page_title {font-size: 20px;text-align: center;padding: 10px 0;}

.page_bd_title {text-align: center;margin:10px 20px;background: #fff;height:80rpx;border: 2rpx solid #ccc;border-radius: 20rpx;}
.page_bd_title view {display: inline-block;width: 33.33%;text-align: center;line-height: 80rpx;font-size: 30rpx;}
.tab_info_show {background: #4aafe2;color: #fff;}
.tab0 {border-bottom-left-radius: 20rpx;border-top-left-radius: 20rpx;border-right: 2rpx solid #ccc;box-sizing: border-box;}
.tab1 {border-right: 2rpx solid #ccc;box-sizing: border-box;}
.tab2 {border-bottom-right-radius: 20rpx;border-top-right-radius: 20rpx;}

.tab_con_hide {display: none;}
.tab_con_show {display: block;}
.tab0Show {display: block;}

.page_bd_con {background: #fff;padding: 40rpx;}
.page_bd_con navigator {font-size: 30rpx;line-height: 2.2em;text-align: left;}
.page_bd_con navigator text {display: inline-block;float: right;}