                </view>
                <view class="more_hide {{ wechatShow ? 'more_show' : '' }}">
                    <image src="../../images/more/gd_weixin.jpg"></image>
                    <image src="../../images/more/gd_dingyue.jpg"></image>
                </view>
            </view>

            <view class="more_ltem">
                <view class="more_info" id="call_center" bindtap="change">
                    <view class="more_info_name">
                        <image src="../../images/more/phone.png"></image>联系客服
                    </view>
                    <view class="more_info_img">
                        <image src="../../images/more/{{call_centerShow ? 'arrowbottom.png' : 'arrowright.png'}}"></image>
                    </view>
                </view>
                <view class="more_hide bg_color {{call_centerShow?'more_show':''}}">
