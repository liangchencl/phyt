/* 全屏背景颜色 */
page {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
}
.page_title {background: #fff;padding: 40rpx;border-bottom: 2rpx solid #ddd;}
.page_bd_title {text-align: center;height:80rpx;border: 2rpx solid #ddd;border-radius: 20rpx;}
.page_bd_title view {display: inline-block;width: 33.33%;text-align: center;line-height: 80rpx;font-size: 30rpx;}
.tab_info_show {background: #4aafe2;color: #fff;}
.tab0 {border-bottom-left-radius: 20rpx;border-top-left-radius: 20rpx;border-right: 2rpx solid #ddd;box-sizing: border-box;}
.tab1 {border-right: 2rpx solid #ddd;box-sizing: border-box;}
.tab2 {border-bottom-right-radius: 20rpx;border-top-right-radius: 20rpx;}

.tab_con_hide {display: none;}
.tab_con_show {display: block;}
.tab0Show {display: block;}

.page_bd_con {font-size: 30rpx;text-align: center;}

.page_bd_con .left {display: inline-block;width: 40%;}
.page_bd_con .center {display: inline-block;width: 30%;}
.page_bd_con .right {display: inline-block;width: 30%;}

.bd_title {border-bottom: 2rpx solid #ddd;padding: 30rpx 30rpx;color: #4aafe2;background: #fff;}

.bd_int {text-align: left;padding: 30rpx 40rpx;font-size: 30rpx;font-weight: bold;}
.bd_int text {color: #4aafe2;}

.bd_content {overflow: hidden;font-size: 26rpx;padding: 16rpx 30rpx;border-bottom: 2rpx solid #ddd; }
.bd_content .left {float: left;}
.bd_content .left view {line-height: 1.45em;} 
.bd_content .center {padding-top: 20rpx;}

.page_bd_con .first {display: inline-block;width: 30%;}
.bd_content .first {float: left;}
.bd_content .first view {line-height: 1.45em;}
.page_bd_con .second {display: inline-block;width: 30%;}
.bd_content .second {padding-top: 20rpx;}
.page_bd_con .third {display: inline-block;width: 25%;}
.page_bd_con .last {display: inline-block;width: 15%;}